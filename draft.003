@Math
  -use System.
    add                            -- Знак - в начале это значит, локально
    sub
  N = Int
  * in N
  (+) = add
  (-) a b = | a = _ : 0 - b | : sub -- _ - Это пропуск значения
  inc a = (+) a 1
  dec a = (-) a 1
  abs a = | <0 = -a | a             -- Сопоставление с образцом в одну строку
  !.. =                             -- .. Приставка (Между именем функции и её первым аргументом может отсутствовать пробел)
    | a < 0 : -!abs a               -- Сопоставление с образцом
    | a = 0 : 1
    | : [1..a] apply (*)            -- Массив, Свёртка вправо
